                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Repite para Nivel 2, 3, etc. -->
            <!-- Nivel 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/nivel2_card"
