<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor_privacidad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/pantallaIntro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true"
        android:background="@drawable/background_gradient"
        android:padding="@dimen/spacing_large">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViperRobando"
                style="@style/CiberRoyale.Card"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintDimensionRatio="16:9">

                <ImageView
                    android:id="@+id/imgViperRobando"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/desc_nivel3_viper_rrss"
                    android:scaleType="centerCrop"
                    android:src="@drawable/viper_rrss" />
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/imgByteContexto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:contentDescription="@string/desc_nivel2_robot"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/robot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardViperRobando"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintDimensionRatio="1:1" />

            <TextView
                android:id="@+id/tvContexto"
                style="@style/CiberRoyale.Text.Body.White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:padding="12dp"
                android:text="@string/nivel3_intro_texto"
                android:textSize="18sp"
                android:background="@drawable/bg_texto_translucido"
                app:layout_constraintStart_toEndOf="@id/imgByteContexto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgByteContexto"
                app:layout_constraintWidth_percent="0.55" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrierBottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="imgByteContexto,tvContexto" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIntroSiguiente"
                style="@style/CiberRoyale.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="@string/common_button_listo"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrierBottom" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/pantallaControl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone"
        android:background="@drawable/bg_control_room"
        android:padding="@dimen/spacing_large">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvControlTitle"
                style="@style/CiberRoyale.Text.Title.Large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/nivel3_control_titulo"
                android:shadowColor="#80000000"
                android:shadowRadius="4"
                android:shadowDx="0"
                android:shadowDy="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnInfoSala"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/btnInfoSala"
                android:layout_width="@dimen/info_button_size"
                android:layout_height="@dimen/info_button_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_info"
                android:scaleType="centerInside"
                android:contentDescription="@string/desc_info_nivel3_control"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tvControlTitle"
                app:tint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGame1"
                style="@style/CiberRoyale.Button.Menu"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="@string/nivel3_control_game1_label"
                app:layout_constraintTop_toBottomOf="@id/tvControlTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGame2"
                style="@style/CiberRoyale.Button.Menu"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/nivel3_control_game2_label"
                app:layout_constraintTop_toBottomOf="@id/btnGame1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGame3"
                style="@style/CiberRoyale.Button.Menu"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/nivel3_control_game3_label"
                app:layout_constraintTop_toBottomOf="@id/btnGame2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#88FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/btnGame3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nivel3_control_password_hint"
                    android:enabled="false"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckPassword"
                style="@style/CiberRoyale.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/nivel3_control_button_confirmar"
                android:enabled="false"
                app:layout_constraintTop_toBottomOf="@id/passwordLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/pantallaGame1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/background_gradient"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/tvGame1Titulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/nivel3_game1_titulo"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/orbitron_extrabold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnInfoGame1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"/>
                <ImageButton
                    android:id="@+id/btnInfoGame1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/desc_info_nivel3_game1"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/purple_200"
                android:layout_marginBottom="16dp" />

            <androidx.cardview.widget.CardView
                style="@style/CiberRoyale.Card"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_user"
                        android:contentDescription="@string/nivel3_game1_item_photo"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/nivel3_game1_item_photo"
                        android:textSize="16sp"
                        android:fontFamily="@font/orbitron_regular"/>
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/togglePhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPhotoPublic"
                            style="@style/CiberRoyale.Button.Toggle"
                            android:text="@string/nivel3_game1_publico"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPhotoPrivate"
                            style="@style/CiberRoyale.Button.Toggle"
                            android:text="@string/nivel3_game1_privado"/>
                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CiberRoyale.Card"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_calendar"
                        android:contentDescription="@string/nivel3_game1_item_birthdate"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/nivel3_game1_item_birthdate"
                        android:textSize="16sp"
                        android:fontFamily="@font/orbitron_regular"/>
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleBirthdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBirthdatePublic"
                            style="@style/CiberRoyale.Button.Toggle"
                            android:text="@string/nivel3_game1_publico"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBirthdatePrivate"
                            style="@style/CiberRoyale.Button.Toggle"
                            android:text="@string/nivel3_game1_privado"/>
                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CiberRoyale.Card"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_friends"
                        android:contentDescription="@string/nivel3_game1_item_friends"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/nivel3_game1_item_friends"
                        android:textSize="16sp"
                        android:fontFamily="@font/orbitron_regular"/>
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleFriends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFriendsPublic"
                            style="@style/CiberRoyale.Button.Toggle"
                            android:text="@string/nivel3_game1_publico"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFriendsPrivate"
                            style="@style/CiberRoyale.Button.Toggle"
                            android:text="@string/nivel3_game1_privado"/>
                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CiberRoyale.Card"
                android:layout_marginBottom="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_posts"
                        android:contentDescription="@string/nivel3_game1_item_posts"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/nivel3_game1_item_posts"
                        android:textSize="16sp"
                        android:fontFamily="@font/orbitron_regular"/>
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/togglePosts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPostsPublic"
                            style="@style/CiberRoyale.Button.Toggle"
                            android:text="@string/nivel3_game1_publico"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPostsPrivate"
                            style="@style/CiberRoyale.Button.Toggle"
                            android:text="@string/nivel3_game1_privado"/>
                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleteGame1"
                style="@style/CiberRoyale.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nivel3_game1_button_completar"
                android:layout_marginBottom="@dimen/spacing_small"
                android:enabled="false" />

            <TextView
                android:id="@+id/tvGame1Piece"
                style="@style/CiberRoyale.Text.PasswordPiece"
                android:text="@string/nivel3_game1_pieza_obtenida"
                android:layout_marginBottom="@dimen/spacing_medium"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackGame1"
                style="@style/CiberRoyale.Button.Secondary"
                android:text="@string/common_button_volver" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/pantallaGame2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/background_gradient"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/tvGame2Titulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/nivel3_game2_titulo"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/orbitron_extrabold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnInfoGame2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"/>
                <ImageButton
                    android:id="@+id/btnInfoGame2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/desc_info_nivel3_game2"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvStatement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="“Tu ubicación siempre está oculta por defecto en redes sociales.”"
                android:textSize="18sp"
                android:fontFamily="@font/orbitron_regular"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTrue"
                    style="@style/CiberRoyale.Button.Menu"
                    android:layout_weight="1"
                    android:text="@string/nivel3_game2_button_verdadero"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFalse"
                    style="@style/CiberRoyale.Button.Menu"
                    android:layout_weight="1"
                    android:text="@string/nivel3_game2_button_falso"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvGame2Piece"
                style="@style/CiberRoyale.Text.PasswordPiece"
                android:text="@string/nivel3_game2_pieza_obtenida"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackGame2"
                style="@style/CiberRoyale.Button.Secondary"
                android:text="@string/common_button_volver"
                android:layout_marginTop="24dp"/>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pantallaGame3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/background_gradient"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvGame3Titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nivel3_game3_titulo"
            android:textSize="20sp"
            android:fontFamily="@font/orbitron_extrabold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnInfoGame3"/>

        <ImageButton
            android:id="@+id/btnInfoGame3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_info"
            android:scaleType="centerInside"
            android:contentDescription="@string/desc_info_nivel3_game3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <GridLayout
            android:id="@+id/gridLayoutGame3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_medium"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:rowCount="3"
            android:useDefaultMargins="true"
            app:layout_constraintTop_toBottomOf="@id/tvGame3Titulo"
            app:layout_constraintBottom_toTopOf="@+id/tvGame3Piece"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvGame3Piece"
            style="@style/CiberRoyale.Text.PasswordPiece"
            android:text="@string/nivel3_game3_pieza_obtenida"
            app:layout_constraintTop_toBottomOf="@id/gridLayoutGame3"
            app:layout_constraintBottom_toTopOf="@+id/btnBackGame3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackGame3"
            style="@style/CiberRoyale.Button.Secondary"
            android:text="@string/common_button_volver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/pantallaRecomp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/background_gradient"
        android:padding="@dimen/spacing_large">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/spacing_xlarge">

            <TextView
                style="@style/CiberRoyale.Text.Title.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nivel3_recompensa_titulo"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nivel3_recompensa_subtitulo"
                android:textSize="18sp"
                android:fontFamily="@font/orbitron_regular"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <TextView
                android:id="@+id/tvFinalPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/orbitron_extrabold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="@dimen/spacing_xlarge"
                tools:text="BYTE-SEGURA-2025"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinish"
                style="@style/CiberRoyale.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/common_button_finalizar_nivel" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>