<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contenedor_nivel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Pantalla 1: Animación ViperWare -->
    <ScrollView
        android:id="@+id/scroll_pantalla_ataque"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pantalla_ataque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/background_gradient">

            <!-- Título grande centrado -->
            <TextView
                android:id="@+id/tvTituloAtaque"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@string/titulo_ataque"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                android:fontFamily="@font/orbitron_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Vídeo 16:9 que ocupa todo el ancho menos márgenes -->
            <VideoView
                android:id="@+id/videoViper"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:importantForAccessibility="no"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTituloAtaque" />

            <!-- Texto secundario centrado -->
            <TextView
                android:id="@+id/tvSubtituloAtaque"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@string/subtitulo_ataque"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:fontFamily="@font/orbitron_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/videoViper" />

            <!-- Botón “Continuar” -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSiguienteAtaque"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/purple_700"
                android:fontFamily="@font/orbitron_extrabold"
                android:text="@string/btn_continuar"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSubtituloAtaque" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Pantalla 2: Byte se presenta -->
    <ScrollView
        android:id="@+id/scroll_pantalla_byte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pantalla_byte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp"
            android:background="@drawable/background_gradient">

            <!-- Texto introductorio con fondo semitranslúcido -->
            <TextView
                android:id="@+id/tvIntroByte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_texto_translucido"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/intro_byte"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:fontFamily="@font/orbitron_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Robot “enmarcado” -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRobot"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvIntroByte"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintDimensionRatio="1:1">

                <ImageView
                    android:id="@+id/imgRobot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/robot_presentacion" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta con texto y botones -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOpciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardRobot"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvBytePregunta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/byte_pregunta"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/orbitron_extrabold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUnirse"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@color/green_700"
                        android:fontFamily="@font/orbitron_extrabold"
                        android:text="@string/btn_unirse"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        app:rippleColor="@color/green_200" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRechazar"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/red_700"
                        android:fontFamily="@font/orbitron_extrabold"
                        android:text="@string/btn_rechazar"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        app:rippleColor="@color/red_200" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Pantalla 3: Contexto -->
    <ScrollView
        android:id="@+id/scroll_pantalla_contexto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pantalla_contexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/background_gradient">

            <!-- Imagen de Viper robando contraseñas -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViperRobando"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintDimensionRatio="16:9">

                <ImageView
                    android:id="@+id/imgViperRobando"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/viper_contras" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Robot Byte a la izquierda -->
            <ImageView
                android:id="@+id/imgByteContexto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@null"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/robot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardViperRobando"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintDimensionRatio="1:1" />

            <!-- Texto de contexto a la derecha -->
            <TextView
                android:id="@+id/tvContexto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:text="@string/contexto_viper"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="@font/orbitron_regular"
                android:gravity="center"
                android:background="@drawable/bg_texto_translucido"
                app:layout_constraintStart_toEndOf="@id/imgByteContexto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgByteContexto"
                app:layout_constraintWidth_percent="0.55" />

            <!-- Barrier para la “fila” de robot+texto -->
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrierBottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="imgByteContexto,tvContexto" />

            <!-- Botón “Estoy listo” -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContextoListo"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/purple_700"
                android:fontFamily="@font/orbitron_extrabold"
                android:text="@string/btn_listo"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barrierBottom" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Pantalla 4: Quiz de contraseñas seguras -->
    <ScrollView
        android:id="@+id/scroll_pantalla_quiz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/pantalla_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/background_gradient">

            <!-- Cabecera con número de pregunta -->
            <TextView
                android:id="@+id/tvQuizTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/quiz_titulo"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <!-- Barra de progreso -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressQuiz"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="24dp"
                app:indicatorColor="@color/purple_700"
                app:trackColor="@android:color/white" />

            <!-- Card con la pregunta -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/tvPregunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="¿Pregunta?"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Opciones con MaterialRadioButton (dinámicas en tiempo de ejecución) -->
            <RadioGroup
                android:id="@+id/rgOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical" />

            <!-- Botón siguiente -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSiguiente"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/purple_700"
                android:enabled="false"
                android:text="@string/btn_siguiente"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_arrow_fw"
                app:iconGravity="textEnd"
                app:iconSize="30dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Pantalla 5.1: Mejora contraseñas — Bloque 1 -->
    <ScrollView
        android:id="@+id/scroll_pantalla_mejora1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/pantalla_mejora1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/background_gradient">

            <!-- Cabecera -->
            <TextView
                android:id="@+id/tvMejoraTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/mejora_title1"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Barra de progreso al 50% -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressMejora1"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="24dp"
                app:indicatorColor="@color/purple_700"
                app:trackColor="@android:color/white" />

            <!-- Card para primera contraseña -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="1. juanito2009"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_m1_p1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:saveEnabled="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card para segunda contraseña -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="2. contraseña"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_m1_p2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:saveEnabled="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón siguiente -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMejora1Next"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/purple_700"
                android:enabled="false"
                android:text="@string/btn_siguiente"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_arrow_fw"
                app:iconGravity="textEnd"
                app:iconSize="30dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Pantalla 5.2: Mejora contraseñas — Bloque 2 -->
    <ScrollView
        android:id="@+id/scroll_pantalla_mejora2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/pantalla_mejora2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/background_gradient">

            <!-- Cabecera -->
            <TextView
                android:id="@+id/tvMejoraTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/mejora_title2"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Barra de progreso al 100% -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressMejora2"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="24dp"
                app:indicatorColor="@color/purple_700"
                app:trackColor="@android:color/white" />

            <!-- Card para tercera contraseña -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="3. pepe123"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_m2_p1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:saveEnabled="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card para cuarta contraseña -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="4. primavera"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_m2_p2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:saveEnabled="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón “Siguiente” -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMejora2Next"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/purple_700"
                android:enabled="false"
                android:text="@string/btn_siguiente"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_arrow_fw"
                app:iconGravity="textEnd"
                app:iconSize="30dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Pantalla 6: Combate final -->
    <!-- ===========================
     Pantalla 6: Combate final – Barras justo debajo de cada sprite
=========================== -->
    <ScrollView
        android:id="@+id/scroll_pantalla_combate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pantalla_combate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/background_gradient">

            <!-- 1) Sprite del enemigo centrado arriba -->
            <ImageView
                android:id="@+id/imgEnemigo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/viper"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- 2) Barra de vida del enemigo (justo debajo de imgEnemigo) -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/barraVidaEnemigo"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                app:indicatorColor="@color/red_700"
                app:trackColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/imgEnemigo"
                app:layout_constraintStart_toStartOf="@id/imgEnemigo"
                app:layout_constraintEnd_toEndOf="@id/imgEnemigo" />

            <!-- 3) Caja de narración un poco más abajo, centrada -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNarracion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/barraVidaEnemigo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textoNarracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="El combate comienza..."
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 4) Sprite del jugador centrado debajo de la narración -->
            <ImageView
                android:id="@+id/imgJugador"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/robot"
                app:layout_constraintTop_toBottomOf="@id/cardNarracion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- 5) Barra de vida del jugador justo debajo de imgJugador -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/barraVidaJugador"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                app:indicatorColor="@color/green_700"
                app:trackColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/imgJugador"
                app:layout_constraintStart_toStartOf="@id/imgJugador"
                app:layout_constraintEnd_toEndOf="@id/imgJugador" />

            <!-- 6) Panel de ataque en la parte inferior, semitransparente -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/panelAtaque"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#CCFFFFFF"
                app:layout_constraintTop_toBottomOf="@id/barraVidaJugador"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <!-- EditText para contraseña (ocupa la mayor parte) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxStrokeColor="@color/teal_200">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputContrasena"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_contrasena"
                            android:inputType="textPassword"
                            android:padding="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón ¡Atacar! a la derecha -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAtacar"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/purple_700"
                        android:text="@string/btn_ataque"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        app:cornerRadius="24dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <!-- Pantalla 7: Recompensa / Derrota -->
    <ScrollView
        android:id="@+id/scroll_pantalla_recomp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/pantalla_recomp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:background="@drawable/background_gradient">

            <!-- Título (victoria o derrota) -->
            <TextView
                android:id="@+id/tvRecompensaTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Subtítulo: mensaje de rango -->
            <TextView
                android:id="@+id/tvRecompensaSubtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Mostrar la puntuación total -->
            <TextView
                android:id="@+id/tvPuntuacionFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Imagen de confeti / alerta -->
            <ImageView
                android:id="@+id/imgConfeti"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="32dp"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_actor" />

            <!-- Botón “Continuar” o “Reintentar” -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecompContinuar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
