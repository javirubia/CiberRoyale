<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CiberRoyale.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CiberRoyale.ProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">@color/purple_700</item>
        <item name="trackColor">@android:color/white</item>
        <item name="android:layout_height">4dp</item>
    </style>

    <style name="CiberRoyale.Text.Base" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/orbitron_regular</item>
    </style>

    <style name="CiberRoyale.Text.Title.Large" parent="CiberRoyale.Text.Base">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/orbitron_extrabold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CiberRoyale.Text.Title.Medium" parent="CiberRoyale.Text.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/orbitron_extrabold</item>
    </style>

    <style name="CiberRoyale.Text.Body.White" parent="CiberRoyale.Text.Base">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CiberRoyale.Text.Body.Black.Bold" parent="CiberRoyale.Text.Base">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
    </style>

    <style name="CiberRoyale.Button.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/orbitron_extrabold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CiberRoyale.Button.Primary" parent="CiberRoyale.Button.Base">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CiberRoyale.Button.Accept" parent="CiberRoyale.Button.Base">
        <item name="backgroundTint">@color/green_700</item>
        <item name="rippleColor">@color/green_200</item>
    </style>

    <style name="CiberRoyale.Button.Reject" parent="CiberRoyale.Button.Base">
        <item name="backgroundTint">@color/red_700</item>
        <item name="rippleColor">@color/red_200</item>
    </style>

    <style name="CiberRoyale.Button.Next" parent="CiberRoyale.Button.Base">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="cornerRadius">24dp</item>
        <item name="icon">@drawable/ic_arrow_fw</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">30dp</item>
    </style>
    <style name="CiberRoyale.DropTarget" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_drop_target</item>
    </style>

    <style name="CiberRoyale.HoleButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/ic_hole</item>
        <item name="android:contentDescription">@string/desc_hoyo</item>
    </style>
    <style name="CiberRoyale.Button.Menu" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:backgroundTint">#CCFFFFFF</item>
        <item name="strokeColor">@color/purple_500</item>
    </style>

    <style name="CiberRoyale.Button.Toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CiberRoyale.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/gray_600</item>
    </style>

    <style name="CiberRoyale.Text.PasswordPiece" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
    </style>

    <style name="CiberRoyale.CircleDigit" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_circle_digit</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
    </style>

    <style name="CiberRoyale.Card.Clue" parent="CiberRoyale.Card">
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="CiberRoyale.PantallaRecompensa.Contenedor" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:background">@drawable/background_gradient</item>
    </style>
</resources>